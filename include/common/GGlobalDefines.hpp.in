/**
 * This file holds some global definitions used in all of Geneva. In particular, checks for
 * the Boost version being used are done here.
 */

#ifndef GGLOBALDEFINES_HPP_
#define GGLOBALDEFINES_HPP_

//-----------------------------------------------------------
// For Microsoft-compatible compilers
#if defined(_MSC_VER)  &&  (_MSC_VER >= 1020)

#include <winsock2.h>
#include <windows.h>

#endif /* _MSC_VER */
//-----------------------------------------------------------

#include <boost/config.hpp>
#include <boost/version.hpp>

/** Care for symbols to be exported */
#if defined GEM_DYNAMIC && (GEM_DYNAMIC != 0)
#ifdef GEM_LIBRARIES_EXPORTS
#define G_API BOOST_SYMBOL_EXPORT
#else
#define G_API BOOST_SYMBOL_IMPORT
#endif /* GEM_LIBRARIES_EXPORTS */
#else
#define G_API
#endif /* GEM_DYNAMIC */

/** The minimum allowed version of the Boost library */
#define MIN_BOOST_VERSION 104800

#if BOOST_VERSION < MIN_BOOST_VERSION
#error "Error: Boost should at least have version 1.48 !"
#endif /* BOOST_VERSION */

/** The current version of the Geneva library */
#define GENEVA_VERSION @GENEVA_API_VERSION@

/** Funnily, on g++ std::pow(x,2) seems to be less efficient than direct multiplication */
#define GSQUARED(X) (X) * (X)

// Make sure we use boost filesystem v3 where available
#if BOOST_VERSION >= 104400
#define BOOST_FILESYSTEM_VERSION 3
#endif /* BOOST_VERSION >= 104400 */

// Check for C++11 and enable some macros, if possible. 
// We only support this for gcc, clang and Intel compilers
#define BASE
#if (defined(__GNUC__) || defined(__clang__) || defined(__ICC) || defined(_MSC_VER)) && __cplusplus == 201103L 
#define OVERRIDE override
#define FINAL final
#else
#define OVERRIDE
#define FINAL
#endif

#endif /* GGLOBALDEFINES_HPP_ */
